        <!-- Page Content -->
        <div class="container mt-5 mb-5">
            <div class="row">
                <div class="col">
                    <h1 class="mt-3 mb-3 text-center">Create Event</h1>
                </div>
            </div>
            <form id="meeting-form" class="row needs-validation" novalidate>
                <!-- Col 1 -->
                <div class="col-12 col-lg-6">
                    <div class="row m-3">
                        <h2 class="mt-3 mb-3">Meeting Title</h2>
                        <div class="input-group has-validation">
                            <input
                                id="meeting-title"
                                class="form-control"
                                aria-label="With textarea"
                                aria-describedby="title-feedback"
                                required
                            ></input>
                            <div id="title-feedback" class="invalid-feedback">
                                Please choose a meeting title
                            </div>
                        </div>
                    </div>
                    <div class="row m-3">
                        <h2 class="mt-3 mb-3">Meeting Description</h2>
                        <div class="input-group">
                            <textarea
                            id="meeting-desc"
                                class="form-control"
                                aria-label="With textarea"
                            ></textarea>
                        </div>
                    </div>
                    <div class="row m-3">
                        <div class="col-12 col-md-12 col-lg-6">
                            <h2 class="mt-3 mb-lg-3">Meeting Days</h2>
                        </div>

                        <div class="col-12 col-md-12 col-lg-6 mt-lg-3 mb-3">
                            <select
                                class="form-select has-validation p-1 ps-3 pill-corner"
                                aria-label="Default select example"
                                id="days-mode"
                            >
                                <option selected>Specific days</option>
                                <option>Days of the week</option>
                            </select>
                        </div>
                        <!-- Calendar picker  -->
                        <div
                            class="col-sm-12 p-3 round-corner bg-gray"
                            id="date-picker"
                        >
                            <div class="log-event" id="datetimepicker"></div>
                        </div>
                        <!-- Days of the week -->
                        <div
                            class="col-sm-12 round-corner bg-gray hide"
                            id="day-picker"
                        >
                            <div class="row p-2">
                                <div
                                    class="col m-1 p-2 py-3 text-center align-middle form-control pill-corner small-text cursor-pointer day-btn"
                                    
                                >
                                    SUN
                                </div>
                                <div
                                    class="col m-1 p-2 py-3 text-center align-middle form-control pill-corner small-text cursor-pointer day-btn"
                                >
                                    MON
                                </div>
                                <div
                                    class="col m-1 p-2 py-3 text-center align-middle form-control pill-corner small-text cursor-pointer day-btn"
                                >
                                    TUE
                                </div>
                                <div
                                    class="col m-1 p-2 py-3 text-center align-middle form-control pill-corner small-text cursor-pointer day-btn"
                                >
                                    WED
                                </div>
                                <div
                                    class="col m-1 p-2 py-3 text-center align-middle form-control pill-corner small-text cursor-pointer day-btn"
                                >
                                    THU
                                </div>
                                <div
                                    class="col m-1 p-2 py-3 text-center align-middle form-control pill-corner small-text cursor-pointer day-btn"
                                >
                                    FRI
                                </div>
                                <div
                                    class="col m-1 p-2 py-3 text-center align-middle form-control pill-corner small-text cursor-pointer day-btn"
                                >
                                    SAT
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Col 2 -->
                <div class="col-12 col-lg-6">
                    <div class="row mt-3 ms-3">
                        <h2 class="mt-3">Meeting Time</h2>
                    </div>
                    <div class="row mt-2 ms-3 me-3">
                        <div class="col-4">
                            <label for="earliest" class="form-label"
                                >Earliest time:</label
                            >
                        </div>
                        <div class="col">
                            <select
                                class="form-select has-validation p-1 ps-3 pill-corner"
                                aria-label="Default select example"
                                aria-describedby="starttime-feedback"
                                id="earliest"
                                required
                            >
                                <option selected disabled value="">Select time</option>
                                <!-- <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option> 
                Populate with main.js-->
                            </select>
                            <div id="earliest-feedback" class="invalid-feedback">
                                Please choose a starting time
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3 ms-3 me-3">
                        <div class="col-4">
                            <label for="earliest" class="form-label"
                                >Lastest time:</label
                            >
                        </div>
                        <div class="col">
                            <select
                                class="form-select has-validation p-1 ps-3 pill-corner"
                                aria-label="Default select example"
                                aria-describedby="latest-feedback"
                                id="latest"
                                required
                            >
                                <option selected disabled value="">Select time</option>
                                <!-- <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option> -->
                            </select>
                            <div id="latest-feedback" class="invalid-feedback">
                                Please choose a ending time
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3 ms-3">
                        <h2 class="mt-0">Poll</h2>
                    </div>
                    <div class="row mt-3 ms-3 me-3">
                        <div
                            class="col pt-3 pb-3 round-corner bg-gray"
                            id="poll-box"
                        >
                            <div class="row ms-2 mb-1" style="font-weight: 500">
                                Title
                            </div>
                            <div class="row">
                                <div class="input-group mb-2">
                                    <input
                                        id="poll-title"
                                        type="text"
                                        class="form-control"
                                        placeholder="Enter poll title"
                                        aria-label="Poll title"
                                    />
                                </div>
                            </div>
                            <div class="row ms-2 mb-1" style="font-weight: 500">
                                Options
                            </div>
                            <div class="row">
                                <div class="col">
                                    <ul
                                        class="list-unstyled d-none"
                                        id="poll-options"
                                    >
                                    </ul>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <button
                                        type="button"
                                        class="form-control"
                                        id="add-poll-btn"
                                        title="Add poll option"
                                    >
                                        ✏️ Add Poll Option
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3 ms-3 me-3">
                        <button
                            type="submit"
                            class="form-control p-2 pill-corner align-middle"
                            
                            id="create-event-btn"
                        >
                            ✨ Create New Event ✨
                        </button>
                    </div>
                </div>
            </form>
        </div>

